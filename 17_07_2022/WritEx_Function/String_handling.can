on sysvar BDM_ON_OFF
{
  if(@this)
  {
    ILControlStop();
  }
  else
  {
    ILControlStart();
  }
}

on key *
{
  write("your pressing key from keyboard is %c",this); 
}

on key 'c'
{
  int rider =0;
  while(rider <10)
  {
    vehiclespeed[rider] =random(100);
    write(" the vehiclespeed is [%d] =%d",rider,vehiclespeed[rider]);
    rider++;
  }
  
}

